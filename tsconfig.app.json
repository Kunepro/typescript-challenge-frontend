{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": false,
    "extendedDiagnostics": {
      "checks": {
        "controlFlowPreventingContentProjection": "suppress"
      }
    }
  },
  "files": ["src/main.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": ["src/**/*.spec.ts", "src/environments/*", "src/__mocks__/**/*"]
}
